# AI-Klipperen Environment Variables

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=300.0
OLLAMA_MAX_RETRIES=3

# Model Configuration
AI_CLIP_MODEL_VISION_CAPTION_MODEL=minicpm-v:8b-2.6-q4_0
AI_CLIP_MODEL_VISION_CAPTION_FALLBACK=llava:latest
AI_CLIP_MODEL_TEXT_EMBEDDING_MODEL=snowflake-arctic-embed2:latest
AI_CLIP_MODEL_CHAT_MODEL=deepseek-r1:32b
AI_CLIP_MODEL_CHAT_MODEL_FALLBACK=mistral:latest
AI_CLIP_MODEL_ASR_MODEL=whisper.cpp
AI_CLIP_MODEL_ASR_MODEL_SIZE=base

# Processing Configuration
AI_CLIP_PROCESS_FRAME_EXTRACTION_FPS=1.0
AI_CLIP_PROCESS_FRAME_QUALITY=2
AI_CLIP_PROCESS_CLIP_DURATION=10.0
AI_CLIP_PROCESS_CLIP_OVERLAP=2.0
AI_CLIP_PROCESS_DEFAULT_QUALITY_THRESHOLD=5.0
AI_CLIP_PROCESS_BATCH_SIZE=10
AI_CLIP_PROCESS_MAX_WORKERS=4

# Storage Configuration
AI_CLIP_STORAGE_CHROMA_PERSIST_DIR=./chroma_db
AI_CLIP_STORAGE_UPLOAD_DIR=./uploads
AI_CLIP_STORAGE_OUTPUT_DIR=./outputs
AI_CLIP_STORAGE_PROJECTS_DIR=./projects
AI_CLIP_STORAGE_MAX_UPLOAD_SIZE=5368709120

# Render Configuration
AI_CLIP_RENDER_PREVIEW_RESOLUTION=[640,360]
AI_CLIP_RENDER_PREVIEW_FPS=24
AI_CLIP_RENDER_PREVIEW_WATERMARK=true
AI_CLIP_RENDER_FINAL_RESOLUTION=[1920,1080]
AI_CLIP_RENDER_FINAL_FPS=30
AI_CLIP_RENDER_FINAL_BITRATE=10M
AI_CLIP_RENDER_FINAL_PRESET=slow

# Feature Flags
AI_CLIP_ENABLE_ASR=false
AI_CLIP_ENABLE_GPU=true